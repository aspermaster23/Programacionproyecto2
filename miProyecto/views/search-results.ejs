<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->

<%- include('./partials/head') %> 

<body>
	<!-- Header -->
	<%- include('./partials/header') %> 
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title" style="color: red;">Resultados de b√∫squeda</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<% for( let i = 0; i < products.length; i++ ) { %>
				<% let product = products[i] %> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/<%= product.id %>">
							<figure class="product-box_image">
								<img src="/images/products/Porsche.png" alt="<%= product.car_brand %>">
							</figure>
							<article class="product-box_data">
								<h2><%= product.car_brand %></h2>
								<p><%= product.car_type %> - <%= product.car_color %> - <%= product.car_year %> </p>
								<p><%= product.car_description %> </p>
								<p>Comentarios: 12</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>

			<% if (products.length == 0) { %>
			 <h3 style="color: red;">No existen productos para tu busqueda</h3>
			<% } %>

	<!-- footer -->
	<%- include('./partials/footer')  %> 
	<!-- /footer -->
</body>

</html>